server {
    listen 80 default_server;
    server_name tomwadley.net www.tomwadley.net;
    return 301 https://tomwadley.net$request_uri;
}

server {
    listen 443 ssl;
    server_name www.tomwadley.net;
    return 301 https://tomwadley.net$request_uri;

    ssl_certificate /etc/nginx/ssl/tomwadley.net.bundle.crt;
    ssl_certificate_key /etc/nginx/ssl/tomwadley.net.key;
    include ssl/config;
}

server {
    listen 443 ssl;
    server_name tomwadley.net;

    ssl_certificate /etc/nginx/ssl/tomwadley.net.bundle.crt;
    ssl_certificate_key /etc/nginx/ssl/tomwadley.net.key;
    include ssl/config;

    root /srv/tomwadley.net;
    index index.html;

    location / { }
}
